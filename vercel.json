{
  "version": 2,
  "builds": [
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/signup", "dest": "/public/sign.html" },
    { "src": "/login", "dest": "/public/login.html" },
    { "src": "/usersignup", "dest": "/api/app.js" },
    { "src": "/userlogin", "dest": "/api/app.js" }
  ]
}

